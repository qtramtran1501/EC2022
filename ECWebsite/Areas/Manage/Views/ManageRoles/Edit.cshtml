@model ECWebsite.Models.EF.Role

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_ManageLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Manage" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Manage" asp-controller="ManageRoles" asp-action="Index">Danh sách Manage</a>
            <span class="breadcrumb-item active">Chỉnh sửa thông tin Manage</span>
        </nav>
    </div>
</div>
<form asp-action="Edit" asp-route-id="@Model.RoleId" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="RoleId" />
    <div class="form-group">
        <div class="form-group col-md-20">
            <label class="col-sm-2 col-form-label">Chức vụ</label>
            <div class="col-sm-5">
                <input type="text" class="form-control" asp-for="RoleName" placeholder="Chức vụ">
            </div>
        </div>
        <div class="form-group col-md-20">
            <label class="col-sm-2 col-form-label">Chức vụ</label>
            <div class="col-sm-5">
                <input type="text" class="form-control" asp-for="Description" placeholder="Mô tả">
            </div>
        </div>

        <div class="form-group col-md-6">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            </div>
        </div>
    </div>

</form>
